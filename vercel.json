{
  "version": 2,
  "buildCommand": "node scripts/eslint-check.js && next build && node scripts/copy-static-files.js && node scripts/vercel-deploy-handler.js",
  "ignoreCommand": "exit 1",
  "devCommand": "next dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "outputDirectory": "out",
  "git": {
    "deploymentEnabled": {
      "main": true,
      "master": true
    }
  },
  "github": {
    "silent": false,
    "autoJobCancelation": true,
    "enabled": true
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=1, stale-while-revalidate"
        }
      ]
    }
  ],
  "buildOutputConfig": {
    "enableEsModules": true,
    "noModernJS": false
  },
  "cleanBuilds": true,
  "routes": [
    {
      "src": "/black_hole_diffusion.html",
      "headers": {
        "cache-control": "public, max-age=86400"
      }
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
} 